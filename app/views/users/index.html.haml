#top-bar
  #logo
    =image_tag('logo.svg')
    %span mail
%nav
  #displace
  #search
  #folders
    %ul
      %li Inbox
      %li Drafts
      %li Sent
      %li Starred
      %li Boomerang
  #labels 
    %h3 Labels
    %ul
      %li 
        .circle-indicator
        .label-text Close Friends
      %li 
        .circle-indicator
        .label-text Hackathons
      %li 
        .circle-indicator
        .label-text Work
      %li 
