#container
  #inbox-header
    %h3 Inbox
    #buttons
      #reply
      #delete
      #sort
  #all-messages
    .table
      %table
        - @inbox.each do |message|
          %tr 
            %td= image_tag (get_user_info "#{message['to']['data'].second['id']}"), {:class => "rounded-pic blue-border"}
            %td.name #{message["to"]["data"].second["name"]}
            %td.message #{message["comments"]["data"].last["message"]}
            %td.time= get_awesome_date "#{message['updated_time']}"
